<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.jaggu.sitams.bus">

<ProgressBar
    android:layout_width="75dp"
    android:layout_height="75dp"
    android:id="@+id/pb"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:visibility="gone"/>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/cardviewbus"
                android:layout_centerHorizontal="true"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                app:cardElevation="10dp"
                android:fadingEdgeLength="30dp"
                android:layout_marginBottom="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:src="@drawable/ic_contact_mail_black_24dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trans"
                android:layout_marginLeft="43dp"
                android:layout_toRightOf="@+id/placeimage" />
            </android.support.v7.widget.CardView>

        <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardviewbus"
            android:layout_gravity="center"
            android:id="@+id/busimg"
            android:layout_marginTop="10dp"
             />
        </RelativeLayout>
</ScrollView>
</RelativeLayout>
