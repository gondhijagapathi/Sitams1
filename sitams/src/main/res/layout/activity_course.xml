<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jaggu.sitams.Course">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="10dp"
    android:fadingEdgeLength="30dp"
    android:id="@+id/cardviewphoto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/courses"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:src="@drawable/pg"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
    <Button
        android:layout_width="180dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="SCIENCE AND HUMANITIES"
        android:id="@+id/HS"
        android:layout_below="@+id/cardviewphoto"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="CSE"
        android:id="@+id/CSE"
        android:layout_below="@+id/HS"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="ECE"
        android:id="@+id/ECE"
        android:layout_below="@+id/CSE"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="EEE"
        android:id="@+id/EEE"
        android:layout_below="@+id/ECE"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="MECH"
        android:id="@+id/MECH"
        android:layout_below="@+id/EEE"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="CIVIL"
        android:id="@+id/CIVIL"
        android:layout_below="@+id/MECH"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="MBA"
        android:id="@+id/MBA"
        android:layout_below="@+id/CIVIL"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="MCA"
        android:id="@+id/MCA"
        android:layout_below="@+id/MBA"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
    </ScrollView>
</RelativeLayout>